<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/dimen_15dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow_white_corner_5"
        android:padding="@dimen/dimen_10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_notes_title"
            android:text="Session 1 - Day 2"
            style="@style/Font.Bold.14"
            android:textColor="@color/black_grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_notes_date"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_notes_date"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="May 10, 2021"
            style="@style/Font.Regular.12"
            android:textColor="@color/medium_grey"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_notes_title_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_notes_title"
            android:text="Creation: The Creating God"
            style="@style/Font.Bold.14"
            android:layout_marginTop="7dp"
            android:textColor="@color/black_grey"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_notes_verse_title"
            android:text="Psalm 84"
            style="@style/Font.Regular.14"
            android:textColor="@color/medium_grey"
            app:layout_constraintTop_toBottomOf="@id/tv_notes_title_text"
            android:layout_marginTop="7dp"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Always keep our faith in God. Lorem ipsum dolor sit amet. Always keep our faith in God. Lorem ipsum dolor sit amet."
            style="@style/Font.Regular.14"
            android:textColor="@color/black_grey"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@id/tv_notes_verse_title"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>