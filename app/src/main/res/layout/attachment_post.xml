<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/cl_attachment"
        android:layout_height="250dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/AllCorner10"
            android:src="@drawable/card_browse_studies"
            app:layout_constraintBottom_toTopOf="@id/iv_3"
            app:layout_constraintEnd_toStartOf="@id/iv_2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/card_browse_studies"
            app:layout_constraintBottom_toTopOf="@id/iv_4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@id/iv_1"
            app:layout_constraintStart_toEndOf="@id/iv_1"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/AllCorner10" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            app:shapeAppearanceOverlay="@style/AllCorner10"
            android:src="@drawable/card_browse_studies"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_2"
            app:layout_constraintRight_toLeftOf="@id/iv_4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_1" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/card_browse_studies"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/AllCorner10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@id/iv_3"
            app:layout_constraintStart_toEndOf="@id/iv_3"
            app:layout_constraintTop_toBottomOf="@id/iv_2" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>