<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/rl_favorite"
            android:paddingVertical="8dp"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:background="@drawable/light_grey2_corner_20"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/iv_favorite"
                android:src="@drawable/ic_favorite"
                app:tint="@color/red" />
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/tv_like_count"
                android:text="3"
                style="@style/Font.Bold.14"
                android:textColor="@color/black_grey"
                android:gravity="center"
                android:layout_toRightOf="@id/iv_favorite"
                android:layout_marginLeft="3dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:paddingVertical="8dp"
            android:id="@+id/rl_pray"
            android:layout_marginHorizontal="10dp"
            android:paddingHorizontal="8dp"
            android:background="@drawable/light_grey2_corner_20"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/iv_pray"
                android:src="@drawable/ic_pray"/>
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/tv_pray_count"
                android:text="3"
                style="@style/Font.Bold.14"
                android:textColor="@color/black_grey"
                android:gravity="center"
                android:layout_toRightOf="@id/iv_pray"
                android:layout_marginLeft="3dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:paddingVertical="8dp"
            android:paddingHorizontal="15dp"
            android:background="@drawable/light_grey2_corner_20"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/tv_comment"
                android:text="3 Comment"
                style="@style/Font.Bold.14"
                android:textColor="@color/black_grey"
                android:gravity="center" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>