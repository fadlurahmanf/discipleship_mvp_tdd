<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.ResetPasswordActivity">

    <include layout="@layout/toolbar_back" android:id="@+id/toolbar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Password"
        android:id="@+id/tv_reset_password"
        style="@style/Font.Bold.24"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:layout_marginLeft="@dimen/dimen_15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/tv_password"
        android:text="Password"
        app:layout_constraintTop_toBottomOf="@id/tv_reset_password"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="@dimen/dimen_15dp"
        style="@style/Font.Regular.14"
        android:textColor="@color/black_grey"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etl_password"
        app:layout_constraintTop_toBottomOf="@id/tv_password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:endIconDrawable="@drawable/ic_eye"
        app:endIconTint="@color/grey"
        app:endIconMode="custom"
        android:layout_marginHorizontal="@dimen/dimen_15dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_password"
            android:textColor="@color/black_grey"
            android:hint="Enter your password"
            android:textColorHint="@color/medium_grey"
            style="@style/Font.Bold.14"
            android:background="@color/white" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/tv_confirm_password"
        android:text="Confirm Password"
        app:layout_constraintTop_toBottomOf="@id/etl_password"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="@dimen/dimen_15dp"
        style="@style/Font.Regular.14"
        android:textColor="@color/black_grey"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etl_confirm_password"
        app:layout_constraintTop_toBottomOf="@id/tv_confirm_password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:endIconDrawable="@drawable/ic_eye"
        app:endIconTint="@color/grey"
        app:endIconMode="custom"
        android:layout_marginHorizontal="@dimen/dimen_15dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_confirm_password"
            android:textColor="@color/black_grey"
            android:hint="Confirm password"
            android:textColorHint="@color/medium_grey"
            style="@style/Font.Bold.14"
            android:background="@color/white" />
    </com.google.android.material.textfield.TextInputLayout>

    <android.widget.Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset Password"
        style="@style/Font.Bold.14"
        android:textColor="@color/black_grey"
        android:background="@drawable/grey_corner_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="@dimen/dimen_15dp"
        android:layout_marginVertical="@dimen/dimen_10dp"
        android:textAllCaps="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>