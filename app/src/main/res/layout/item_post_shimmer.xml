<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/dimen_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        android:orientation="vertical"
        android:background="@drawable/shadow_white_corner_5"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.facebook.shimmer.ShimmerFrameLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/iv_profile"
                android:src="@color/red"
                android:background="@drawable/grey_circle"
                app:layout_constraintLeft_toLeftOf="parent"
                app:shimmer_base_color="@color/grey"
                app:shimmer_colored="true"
                app:shimmer_highlight_color="@color/white" />
            <com.facebook.shimmer.ShimmerFrameLayout
                android:layout_width="70dp"
                android:layout_height="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_posted_time"
                app:layout_constraintLeft_toRightOf="@id/iv_profile"
                android:layout_marginHorizontal="20dp"
                android:background="@color/white"
                app:shimmer_base_color="@color/grey"
                app:shimmer_colored="true"
                app:shimmer_highlight_color="@color/white"
                android:id="@+id/tv_name"/>
            <com.facebook.shimmer.ShimmerFrameLayout
                android:layout_width="30dp"
                android:layout_height="10dp"
                android:id="@+id/tv_posted_time"
                app:shimmer_base_color="@color/grey"
                app:shimmer_colored="true"
                android:background="@color/white"
                app:shimmer_highlight_color="@color/white"
                app:layout_constraintTop_toBottomOf="@id/tv_name"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/iv_profile"
                android:layout_marginHorizontal="20dp"
                android:text="6h ago"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <com.facebook.shimmer.ShimmerFrameLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            app:shimmer_base_color="@color/grey"
            app:shimmer_colored="true"
            android:background="@color/red"
            app:shimmer_highlight_color="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:text="Dummy" />
        <com.facebook.shimmer.ShimmerFrameLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            app:shimmer_base_color="@color/grey"
            app:shimmer_colored="true"
            android:background="@color/grey"
            app:shimmer_highlight_color="@color/white"
            android:layout_marginVertical="5dp"
            android:text="Dummy" />
        <com.facebook.shimmer.ShimmerFrameLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            app:shimmer_base_color="@color/grey"
            app:shimmer_colored="true"
            app:shimmer_highlight_color="@color/white"
            android:background="@color/grey"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="Dummy" />
        <com.facebook.shimmer.ShimmerFrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:shimmer_base_color="@color/grey"
            android:background="@drawable/white_corner_10"
            app:shimmer_colored="true"
            app:shimmer_highlight_color="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="Dummy" />
    </LinearLayout>
</RelativeLayout>